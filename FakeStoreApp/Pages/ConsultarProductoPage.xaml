<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FakeStoreApp.Pages.ConsultarProductoPage"
             Title="Consultar Producto">

    <StackLayout Padding="10">
        <Label Text="ID del Producto:" />
        <Entry x:Name="ProductoIdEntry" Placeholder="Ingrese el ID del producto" />

        <Button Text="Buscar Producto" Clicked="BuscarProducto_Clicked" />

        <Label Text="Detalles del Producto:" FontAttributes="Bold" />
        <Label x:Name="ProductoDetallesLabel" />
    </StackLayout>

</ContentPage>
